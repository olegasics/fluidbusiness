<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="ru.basics.server.User" table="users">
        <id name="login" column="user_login"/>
        <property name="id" column="id_user"/>
        <property name="name" column="user_name"/>
        <property name="password" column="user_password"/>
        <property name="city" column="user_city"/>
        <property name="phone_number" column="user_phone"/>
    </class>
</hibernate-mapping>